<VBox fx:id="mainWindow" prefHeight="404.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/19.0.2.1-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hu.garaba.view2.MainWindow">
   <children>
      <MenuBar useSystemMenuBar="true" fx:id="menuBar">
         <menus>
            <Menu mnemonicParsing="false" text="File">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#onOpenFile" text="Open file" />
                  <MenuItem mnemonicParsing="false" onAction="#onEnterText" text="Enter text" />
                  <MenuItem mnemonicParsing="false" onAction="#onExport" text="Export cards" />
               </items>
            </Menu>
         </menus>
      </MenuBar>
      <SplitPane dividerPositions="0.6218940926771384" prefHeight="160.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
        <items>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
               <children>
                  <fx:include fx:id="readerView" source="reader.fxml" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
               </children>
            </AnchorPane>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
               <children>
                  <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                     <children>
                        <ScrollPane fitToHeight="true" fitToWidth="true" VBox.vgrow="ALWAYS">
                           <content>
                              <AnchorPane>
                                 <children>
                                    <VBox prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                       <children>
                                        <TitledPane fx:id="dictionaryContent" animated="false" text="Dictionary" VBox.vgrow="ALWAYS">
                                             <content>
                                                <fx:include source="dictionary2.fxml" />
                                             </content>
                                        </TitledPane>
                                        <TitledPane fx:id="sentenceViewContent" animated="false" text="Sentence view" VBox.vgrow="ALWAYS" />
                                          <TitledPane animated="false" text="Edit card" VBox.vgrow="ALWAYS">
                                             <content>
                                                <fx:include fx:id="editCardBox" source="edit_card.fxml" />
                                             </content>
                                          </TitledPane>
                                       </children>
                                    </VBox>
                                 </children>
                              </AnchorPane>
                           </content>
                        </ScrollPane>
                        <HBox alignment="CENTER" fillHeight="false" prefWidth="200.0">
                           <children>
                              <Button mnemonicParsing="false" onAction="#ignoreAction" text="Ignore" />
                              <Button mnemonicParsing="false" onAction="#learningAction" text="Learning" />
                              <Button mnemonicParsing="false" onAction="#knownAction" text="Known" />
                           </children>
                           <padding>
                              <Insets bottom="6.0" top="6.0" />
                           </padding>
                        </HBox>
                     </children>
                  </VBox>
               </children></AnchorPane>
        </items>
      </SplitPane>
   </children>
